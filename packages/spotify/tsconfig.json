{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "verbatimModuleSyntax": true,
        "module": "ESNext",
        "moduleResolution": "Bundler"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
