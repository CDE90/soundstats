{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env", "**/.env.*local"],
    "globalEnv": ["SKIP_ENV_VALIDATION", "NODE_ENV"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**", "lib/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"]
        },
        "typecheck": {
            "dependsOn": ["^build", "^typecheck"]
        },
        "db:generate": {
            "dependsOn": ["^build"]
        },
        "db:migrate": {
            "dependsOn": ["^build"],
            "cache": false
        },
        "db:push": {
            "dependsOn": ["^build"],
            "cache": false
        },
        "db:studio": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        }
    }
}
