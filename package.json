{
    "name": "soundstats-monorepo",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "typecheck": "turbo run typecheck",
        "check": "turbo run lint typecheck",
        "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
        "db:generate": "turbo run db:generate --filter=@soundstats/database",
        "db:migrate": "turbo run db:migrate --filter=@soundstats/database",
        "db:push": "turbo run db:push --filter=@soundstats/database",
        "db:studio": "turbo run db:studio --filter=@soundstats/database",
        "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules"
    },
    "devDependencies": {
        "@types/eslint": "^8.56.12",
        "@types/node": "^20.19.7",
        "@typescript-eslint/eslint-plugin": "^8.36.0",
        "@typescript-eslint/parser": "^8.36.0",
        "eslint": "^8.57.1",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "turbo": "^2.0.0",
        "typescript": "^5.8.3"
    },
    "packageManager": "pnpm@10.8.1"
}
